{% extends 'GestionBundle::layout_gestion.html.twig' %}

{% block container_gestion %} 
    <h1>Listes des Services</h1>
    <button type="button" class="serviceBTN btn btn-success" data-toggle="modal" data-target=".service-modal-md">Nouveau Service</button>
    <div class="row">
        <div class="col-md-4">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Service</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>{{ entity.libservice }}</td>
                            <td>

                                <a class="btn btn-success btn-xs" href="{{ path('service_show', { 'id': entity.id }) }}">Voir</a>

                                <a  class="btn btn-primary btn-xs" href="{{ path('service_edit', { 'id': entity.id }) }}">Modifier</a>

                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>  

    {# le modal de gestion de service #}

    <div class="modal fade service-modal-md" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                {{ form_start(form_service) }}
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel2">Service</h4>
                </div>
                <div class="modal-body">
                    {{ form_row(form_service.libservice) }}

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default left" data-dismiss="modal">Fermer</button>
                    {{form_row(form_service.submit, { "label": "Confirmer" })}}
                </div> 
                {{ form_widget(form_service._token) }} 
                {{ form_end(form_service, {'render_rest': false})}}
            </div>
        </div>
    </div>

{% endblock %}
