{% extends 'GestionBundle::layout_gestion.html.twig' %}

{% block container_gestion %} 
    <h1>Listes des Etudes</h1>
<button type="button" class="etudeBTN btn btn-success" data-toggle="modal" data-target=".etude-modal-md">Nouvelle etude</button>
   <div class="row">
        <div class="col-md-4">
     <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Etude</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.libetude }}</td>
                <td>
                
                        <a class="btn btn-success btn-xs" href="{{ path('etude_show', { 'id': entity.id }) }}">Voir</a>
                   
                        <a class="btn btn-primary btn-xs" href="{{ path('etude_edit', { 'id': entity.id }) }}">Modifier</a>
                   
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
  </div>
	  </div>  
	  
	  {# le modal de gestion des etudes #}

    <div class="modal fade etude-modal-md" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                {{ form_start(form_etude) }}
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel2">Etude</h4>
                </div>
                <div class="modal-body">
                    {{ form_row(form_etude.libetude, {'label':'Libellé'}) }}
                   
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default left" data-dismiss="modal">Fermer</button>
                    {{form_row(form_etude.submit, { "label": "Confirmer" })}}
                </div> 
                {{ form_widget(form_etude._token) }} 
                {{ form_end(form_etude, {'render_rest': false})}}
            </div>
        </div>
    </div>
        
    {% endblock %}
