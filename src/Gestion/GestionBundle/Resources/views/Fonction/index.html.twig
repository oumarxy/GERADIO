{% extends 'GestionBundle::layout_gestion.html.twig' %}

{% block container_gestion %} 
    <h1>Listes des Fonctions</h1>
	
	<button type="button" class="fonctionBTN btn btn-success" data-toggle="modal" data-target=".fonction-modal-md">Nouvelle Fonction</button>
<div class="row">
        <div class="col-md-4">
     <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Fonction</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.libfonction }}</td>
                <td>
                
                        <a class="btn btn-success btn-xs" href="{{ path('fonction_show', { 'id': entity.id }) }}">Voir</a>
                 
                        <a class="btn btn-success btn-xs" href="{{ path('fonction_edit', { 'id': entity.id }) }}">Modifier</a>
                  
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
	 </div>
	  </div>

          {# le modal de gestion de fonction #}

    <div class="modal fade fonction-modal-md" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                {{ form_start(form_fonction) }}
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel2">Fonction</h4>
                </div>
                <div class="modal-body">
                    {{ form_row(form_fonction.libfonction, {'label':'Libellé'}) }}
                   
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default left" data-dismiss="modal">Fermer</button>
                    {{form_row(form_fonction.submit, { "label": "Confirmer" })}}
                </div> 
                {{ form_widget(form_fonction._token) }} 
                {{ form_end(form_fonction, {'render_rest': false})}}
            </div>
        </div>
    </div>
    {% endblock %}
