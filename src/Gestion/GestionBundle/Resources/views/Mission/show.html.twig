{% extends 'GestionBundle::layout_gestion.html.twig' %}

{% block container_gestion %}
    <h1>Mission</h1>

  <div class="row">
        <div class="col-md-5">
    <table class="table table-striped table-bordered">
        <tbody>
       
            <tr>
                <th>Date depart</th>
                <td>{{ entity.datedept|date("d/m/Y") }}</td>
            </tr>
            <tr>
                <th>Date retour</th>
                <td>{{ entity.dateretour|date("d/m/Y") }}</td>
            </tr>
            
            <tr>
                <th>Destination</th>
                <td>{{ entity.destination }}</td>
            </tr>
            <tr>
                <th>Mission</th>
                <td>{{ entity.mission }}</td>
            </tr>
        </tbody>
    </table>
</div>
            <div class="col-md-5">
            <h4>Description </h4>
            {{ entity.description|raw }}
        </div>
</div>

        <a class="btn btn-success "  href="{{ path('mission', { 'idemp': entity.employe.id }) }}">
           Retour
        </a>

{% endblock %}
