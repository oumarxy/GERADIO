{% extends 'GestionBundle::layout_gestion.html.twig' %}

{% block container_gestion %}
    <h3>Composante de salaires</h3>
<div class="row">
        <div class="col-md-4">
    <table class="table table-striped table-bordered">
        <tbody>
            
            <tr>
                <th>Composante</th>
                <td>{{ entity.composante }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Taux</th>
                <td>{{ entity.taux }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ entity.montant }}</td>
            </tr>
        </tbody>
    </table>
</div>
</div>

        <a class="btn btn-success" href="{{ path('employe') }}">
            Retour
        </a>

     
{% endblock %}
