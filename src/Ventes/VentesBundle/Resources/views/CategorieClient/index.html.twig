{% extends "VentesBundle::layout_ventes.html.twig" %}

{% block container_ventes %}
    <h1>Liste catégories</h1>
    <div class="row">
    <div class="col-md-5">
    <table class="table">
        <thead>
            <tr>

                <th>Libellé</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.libelle }}</td>
                    <td>
                        <a href="{{ path('categorieclient_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i>Voir</a>&nbsp;
                        <a href="{{ path('categorieclient_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i> Modifier</a>

                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
    </div>
   
            <a href="{{ path('categorieclient_new') }}">
                Ajouter une catégorie
            </a>

{% endblock %}
