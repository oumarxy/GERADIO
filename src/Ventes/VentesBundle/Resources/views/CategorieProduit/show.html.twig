{% extends "VentesBundle::layout_ventes.html.twig" %}

{% block container_ventes %}  
    <h1>Catégorie Produit</h1>
    <div class="row">
        <div class="col-md-5">
            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th>Libellé</th>
                        <td>{{ entity.libelle }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ entity.prixHT|number_format(0,',',' ')  }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <a class="btn btn-primary" href="{{ path('categorieproduit') }}">
        Liste des catégories
    </a>
    <a class="btn btn-success" href="{{ path('categorieproduit_edit', { 'id': entity.id }) }}">
        Modifier
    </a>
{% endblock %}
